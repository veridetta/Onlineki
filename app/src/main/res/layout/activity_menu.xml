<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_130sdp"
            android:orientation="vertical"
            android:background="#ffffff">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#ffffff">
                <ImageView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:background="@drawable/logo"/>
            </LinearLayout>
            <LinearLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Selamat datang di aplikasi Onlineki "
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="#606060"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Aplikasi SMM dan PPOB terlengkap dan termurah"
                    android:textSize="@dimen/_11sdp"
                    android:layout_gravity="center"
                    android:textColor="#606060"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_12sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/bukaAkses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#3399FF"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_18sdp"
                    app:cardBackgroundColor="#3399FF"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardMaxElevation="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:cardUseCompatPadding="true"
                    app:cardPreventCornerOverlap="false"
                    app:cardCornerRadius="@dimen/_14sdp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_8sdp"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="@dimen/_8sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BUKA AKSES"
                            android:textSize="@dimen/_14sdp"
                            android:layout_gravity="center"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/_18sdp"
                    android:paddingLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <LinearLayout
                        android:id="@+id/onlineki"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            app:cardBackgroundColor="#FF3333"
                            android:background="#FF3333"
                            app:cardCornerRadius="@dimen/_20sdp"
                            app:cardUseCompatPadding="false"
                            app:cardMaxElevation="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            app:cardElevation="@dimen/_2sdp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="On"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="#ffffff"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apa itu \n Onlineki"
                            android:textSize="@dimen/_11sdp"
                            android:layout_gravity="center"
                            android:textColor="#606060"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/kontak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:gravity="center">
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            app:cardBackgroundColor="#808080"
                            android:background="#808080"
                            app:cardCornerRadius="@dimen/_20sdp"
                            app:cardUseCompatPadding="false"
                            app:cardMaxElevation="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            app:cardElevation="@dimen/_2sdp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Me"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="#ffffff"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kontak \n kami"
                            android:textSize="@dimen/_11sdp"
                            android:layout_gravity="center"
                            android:textColor="#606060"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/versi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:gravity="center">
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            app:cardBackgroundColor="#DCB636"
                            android:background="#808080"
                            app:cardCornerRadius="@dimen/_20sdp"
                            app:cardUseCompatPadding="false"
                            app:cardMaxElevation="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            app:cardElevation="@dimen/_2sdp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ve"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="#ffffff"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Versi \n aplikasi"
                            android:textSize="@dimen/_11sdp"
                            android:layout_gravity="center"
                            android:textColor="#606060"
                            android:gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Copyright@2020"
                    android:textSize="@dimen/_11sdp"
                    android:layout_gravity="center"
                    android:textColor="#606060"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>